<div class="col-md-6">
    <h3>Add a book</h3>

    <form class="form newBookForm">
      <div class="form-group">
        <label for="newBookTitle">Book Title:</label>
        <input class="form-input" type="text" id="newBookTitle" name="newBookTitle" />
      </div>
      <div class="form-group">
        <label for="newBookAuthor">Book Author:</label>
        <input class="form-input" type="text" id="newBookAuthor" name="newBookAuthor" />
      </div>
      <div class="form-group">
        <label for="newBookISBN">Book ISBN:</label>
        <input class="form-input" type="text" id="newBookISBN" name="newBookISBN" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
  </div>
  <script src="/js/newBook.js"></script>